{
    "name": "uu-b3cc/iban",
    "image": "ghcr.io/uu-b3cc/starting-template:master",
    "remoteUser": "vscode",

    "customizations": {
      "vscode": {
        "extensions": [
          "haskell.haskell"
        ],

        "settings": {
          "haskell.ghcupExecutablePath": "~/.ghcup/bin/ghcup",
          "haskell.manageHLS": "GHCup",
          "haskell.toolchain": {
            "hls": "2.4.0.0",
            "ghc": "9.4.7",
            "cabal": "3.6.2.0",
            // Setting this to 'null' prevents the extension from asking about installing
            // stack (nobody here needs stack, the extension just happily asks the user
            // to first install the world, and only afterwards starts checking what it
            // actually needs).
            "stack": null
          }
        }
      }
    }
}

